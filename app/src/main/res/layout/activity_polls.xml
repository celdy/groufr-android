<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/polls_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:title="@string/polls_title"
        android:titleTextColor="@color/neutral_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/polls_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/polls_toolbar" />

    <TextView
        android:id="@+id/polls_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/polls_empty"
        android:textColor="@color/neutral_900"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/polls_list"
        app:layout_constraintEnd_toEndOf="@id/polls_list"
        app:layout_constraintStart_toStartOf="@id/polls_list"
        app:layout_constraintTop_toTopOf="@id/polls_list" />

    <ProgressBar
        android:id="@+id/polls_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/polls_list"
        app:layout_constraintEnd_toEndOf="@id/polls_list"
        app:layout_constraintStart_toStartOf="@id/polls_list"
        app:layout_constraintTop_toTopOf="@id/polls_list" />
</androidx.constraintlayout.widget.ConstraintLayout>
