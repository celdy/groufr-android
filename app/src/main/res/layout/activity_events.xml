<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/events_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:title="@string/events_title"
        android:titleTextColor="@color/neutral_900"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleCentered="false"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/events_group_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/neutral_900"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_toolbar" />

    <HorizontalScrollView
        android:id="@+id/events_filters_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_group_badge">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_time_filter"
                style="@style/Widget.Groufr.Chip.Dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events_filter_upcoming"
                app:chipIcon="@drawable/ic_clock"
                app:chipIconVisible="true"
                app:closeIcon="@drawable/ic_dropdown"
                app:closeIconVisible="true"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_participation_filter"
                style="@style/Widget.Groufr.Chip.Dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/events_filter_participation_going_maybe"
                app:chipIcon="@drawable/ic_person"
                app:chipIconVisible="true"
                app:closeIcon="@drawable/ic_dropdown"
                app:closeIconVisible="true"
                app:closeIconEnabled="false" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/events_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_filters_scroll">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/events_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/events_empty"
        android:textColor="@color/neutral_900"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/events_refresh"
        app:layout_constraintEnd_toEndOf="@id/events_refresh"
        app:layout_constraintStart_toStartOf="@id/events_refresh"
        app:layout_constraintTop_toTopOf="@id/events_refresh" />

    <ProgressBar
        android:id="@+id/events_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/events_refresh"
        app:layout_constraintEnd_toEndOf="@id/events_refresh"
        app:layout_constraintStart_toStartOf="@id/events_refresh"
        app:layout_constraintTop_toTopOf="@id/events_refresh" />
</androidx.constraintlayout.widget.ConstraintLayout>
